// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Buyer {
  id            String         @id
  companyName   String         @map("company_name")
  province      String
  city          String
  latitude      Float
  longitude     Float

  @@map("buyers")
}

model Seller {
  id            String         @id
  companyName   String         @map("company_name")
  province      String
  city          String
  latitude      Float
  longitude     Float

  @@map("sellers")
}
